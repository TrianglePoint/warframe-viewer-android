<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="trianglepoint.warframe_viewer_android">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <application
            android:allowBackup="true"
            android:icon="@mipmap/excalibur_launcher"
            android:label="WarViewer"
            android:roundIcon="@mipmap/excalibur_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.Design.NoActionBar">
        <activity android:name=".MainActivity"
                android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".NewsActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ImagesMenuActivity"
                  android:screenOrientation="portrait"/>
        <activity android:name=".ImagesActivity"
                  android:screenOrientation="portrait"/>
        <meta-data android:name="firebase_messaging_auto_init_enabled"
                   android:value="false"/>
        <service android:name=".firebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
        </service>
        <service android:name=".firebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>
    </application>

</manifest>