<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent" android:id="@+id/imagesLayout">
    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/imagePager">
    </android.support.v4.view.ViewPager>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/noneImage" android:visibility="gone"/>

    <android.support.constraint.ConstraintLayout android:layout_width="match_parent"
                                                 android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true" app:srcCompat="@android:drawable/ic_menu_more"
                android:id="@+id/touchMenuButton" app:backgroundTint="#333333" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="16dp" android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/touchMenuLayout"
                android:visibility="gone"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/touchMenuButton"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent">
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" app:srcCompat="@android:drawable/ic_menu_view"
                    android:id="@+id/button_saturation" app:backgroundTint="#217fd1" app:rippleColor="#e9e9e9"
                    android:layout_marginBottom="10dp" android:visibility="gone"/>
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" app:srcCompat="@android:drawable/stat_sys_upload"
                    android:id="@+id/button_upload" app:backgroundTint="#333333" app:rippleColor="#e9e9e9"
                    android:layout_marginBottom="10dp"/>
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" app:srcCompat="@android:drawable/stat_sys_download"
                    android:id="@+id/button_download" app:backgroundTint="#333333" app:rippleColor="#e9e9e9"
                    android:layout_marginBottom="10dp" android:visibility="gone"/>
            <android.support.design.widget.FloatingActionButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true" app:srcCompat="@android:drawable/ic_menu_delete"
                    android:id="@+id/button_delete" app:rippleColor="#e9e9e9" app:backgroundTint="#ff4444"
                    android:visibility="gone"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/deleteMenuLayout"
                app:layout_constraintBottom_toBottomOf="@+id/touchMenuLayout"
                app:layout_constraintEnd_toStartOf="@+id/touchMenuLayout" android:layout_marginEnd="11dp"
                android:visibility="gone">
            <Button
                    android:text="@android:string/yes"
                    android:layout_height="wrap_content" android:id="@+id/button_delete_yes" android:layout_weight=".25"
                    android:background="#ff4444" android:textColor="@android:color/white"
                    android:layout_width="0dp"/>
            <Button
                    android:text="@android:string/no"
                    android:layout_height="wrap_content" android:id="@+id/button_delete_no" android:layout_weight="1"
                    android:background="#333333" android:textColor="@android:color/white"
                    android:layout_marginLeft="20dp" android:layout_width="0dp"/>
        </LinearLayout>
        <ProgressBar
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/loadingImages"
                android:visibility="visible"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
    </android.support.constraint.ConstraintLayout>
</FrameLayout>